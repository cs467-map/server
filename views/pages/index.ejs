<div class="container-fluid">
    <button id="toggle" class="btn btn-success btn-sm">Toggle Filters</button>
    <div id="city-popup" class="hidden">
        <div class='exit'>X</div>
        <h2 id="city-name"><span id="popup-city"></span>, <span id="popup-country"></span></h2>
        <h5 id="lat-lon">(<span id="popup-lat"></span>, <span id="popup-lon"></span>)</h5>
        <div id='flex-container'>
            <div id='image'>
                <!-- https://old.reddit.com/r/loadingicon/comments/6h421f/winders_oc/ -->
                <img id='city-image' src='loading-davebees.gif'/>
            </div>
            <div id='info'>
                <p>Population: <span id="popup-population"></p>
                <p>Internet (Mbps): <span id="popup-mbps"></p>
                <p>Elevation <span id="popup-elevation"> M</p> 
                <p>Air Pollution Index: <span id="popup-pollution"></p> 
                <p>Is there an airport? <span id="popup-airport"></p> 
                <p>Is there a beach? <span id="popup-beach"></p> 
            </div>
        </div>
    </div>
    <div class="row">
        <div id="filter-col" class="col-lg-2 scroll-box">
            <div id="filter">
                <p>Population (Millions):</p>
                <input class="filter-input" id="pop_min" type="number" placeholder="Min. Population" step="0.1" min="0"></input>
                <input class="filter-input" id="pop_max" type="number" placeholder="Max. Population" step="0.1" min="0"></input>

                <p>Internet Speed (Mbps):</p>
                <input class="filter-input" id="internet_min" type="number" placeholder="Min. Speed" step="0.1" min="0"></input>
                <input class="filter-input" id="internet_max" type="number" placeholder="Max. Speed" step="0.1" min="0"></input>

                <button class="btn btn-primary submit">Submit</button>
                <button class="btn btn-danger clear">Clear</button>

                <hr />

                <p>Change Marker Type:<p>
                <label class="custom-radio-btn-container">&#x1F3D9 Population
                  <input type="radio" checked="checked" id="population" name="radio">
                  <span class="checkmark"></span>
                </label>
                <label class="custom-radio-btn-container">&#x1F310 Internet Speed
                  <input type="radio" id="internet" name="radio">
                  <span class="checkmark"></span>
                </label>

                <p>I'm a cool slider! <span id="demo"></span></p>
                <div>
                    <input type="range" min="0" max="10000000" value="100000" class="slider" id="myRange"/>
                </div>
            </div>
        </div>

        <div id="content" class="col-lg-10">
            <div id="map"></div>
        </div>
    </div>

</div>
<script src="post.js"></script>
<script src="city-popup.js"></script>
<script src="city.js"></script>
<script src="main.bundle.js"></script>
<script src="filter.js"></script>
