<script>
// https://stackoverflow.com/questions/24514717/bootstrap-navbar-active-state-not-working
$(document).ready(function() {
  $('li.active').removeClass('active');
  $('a[href="' + location.pathname + '"]').closest('li').addClass('active'); 
});
</script>

<script>
$(document).ready(function() {
    let theme = localStorage.getItem("theme");

    if (theme == "dark") {
        setDark();
    }

    else if (theme == "light") {
        setLight();
    }

    document.getElementById("darkswitch").onclick = function() {
        setDark();

    };

    document.getElementById("lightswitch").onclick = function() {
        setLight();
    };

    function setDark() {
        localStorage.setItem("theme", "dark");
        document.getElementById("dark").href = "/stylesheets/dark.css";
    }

    function setLight() {
        localStorage.setItem("theme", "light");
        document.getElementById("dark").href = "";
    }
});
</script>
